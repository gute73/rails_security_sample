<h1>Create post</h1>

<div class='container'>
	<div class='row'>
		<div class='col-md-6 col-md-offset-3'>

			<%= form_for @post do |f| %>
				<%= render 'shared/error_messages', object: f.object %>

				<%= f.label :content, "New post" %>
				<%= f.text_area :content, class: 'form-control' %>

				<%= f.submit "Create post", class: 'btn btn-primary' %>	

			<% end %>
		</div>
	</div>
</div>

